              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{ \"status\": \"done\" }"
            },
            "url": {
              "raw": "{{ordersUrl}}/v1/orders/{{orderId}}/status",
              "host": ["{{ordersUrl}}"],
              "path": ["v1", "orders", "{{orderId}}", "status"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', () => pm.response.to.have.status(200));",
                  "pm.expect(pm.response.json().success).to.eql(true);"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Cancel Order",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{jwtToken}}" }
            ],
            "url": {
              "raw": "{{ordersUrl}}/v1/orders/{{orderId}}",
              "host": ["{{ordersUrl}}"],
              "path": ["v1", "orders", "{{orderId}}"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Cancel order OK', () => pm.response.to.have.status(200));",
                  "pm.expect(pm.response.json().success).to.eql(true);"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    }
  ]
}